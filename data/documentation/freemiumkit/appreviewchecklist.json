{"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/FreemiumKit\/documentation\/FreemiumKit\/AppReviewChecklist"},"seeAlsoSections":[{"generated":true,"identifiers":["doc:\/\/FreemiumKit\/documentation\/FreemiumKit\/SetupGuide","doc:\/\/FreemiumKit\/documentation\/FreemiumKit\/MigrateFromPaid","doc:\/\/FreemiumKit\/documentation\/FreemiumKit\/FAQs"]}],"sections":[],"metadata":{"role":"article","title":"Checklist to Pass App Review","roleHeading":"FreemiumKit","images":[{"type":"icon","identifier":"FreemiumKit.png"}]},"abstract":[{"text":"This checklist helps developers using FreemiumKit to navigate Apple’s app review process for apps with in-app purchases (IAPs).","type":"text"}],"primaryContentSections":[{"content":[{"text":"Before Submission","type":"heading","level":2,"anchor":"Before-Submission"},{"items":[{"content":[{"inlineContent":[{"inlineContent":[{"text":"Set App Price to Free","type":"text"}],"type":"strong"}],"type":"paragraph"},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"text":"Navigate to “Pricing and Availability” in App Store Connect","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"Set app price to “0.00” \/ Free","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"Ensure availability for all desired countries","type":"text"}],"type":"paragraph"}]}]}]},{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"Link IAPs\/Subscriptions to Your Build"}],"type":"strong"}],"type":"paragraph"},{"items":[{"content":[{"inlineContent":[{"type":"text","text":"In App Store Connect, go to your in-progress build"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Find ‘In-App Purchases and Subscriptions’ section"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Click ‘Select In-App Purchases or Subscriptions’","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Associate relevant products with your build"}]}]}],"type":"unorderedList"}]}],"type":"orderedList"},{"text":"Legal Compliance","type":"heading","level":2,"anchor":"Legal-Compliance"},{"items":[{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"text":"Accept Latest ‘Paid Apps Agreement’","type":"text"}]}],"type":"paragraph"},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Go to ‘Business’ tab in "},{"type":"reference","isActive":true,"identifier":"https:\/\/appstoreconnect.apple.com\/business"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Accept the latest agreement","type":"text"}]}]}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"Add Privacy Policy Link"}]}]},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"In App Store Connect:"}]},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"type":"text","text":"Go to your app’s page > ‘App Privacy’"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"Add Privacy Policy URL"}],"type":"paragraph"}]}]}]}],"type":"unorderedList"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"text":"Set Up Privacy Labels in App Store Connect","type":"text"}]}]},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Go to your app’s page > ‘App Privacy’"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Select “Purchases” for data types"}]}]},{"content":[{"inlineContent":[{"type":"text","text":"Choose “Analytics” and “App Functionality” within “Purchases”"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Answer subsequent questions with ‘No’ (we don’t collect user-identifiable data)"}]}]}],"type":"unorderedList"},{"type":"paragraph","inlineContent":[{"identifier":"AppPrivacy-Purchases","type":"imag